        <description>Determines whether the service appointment ended late or is expected to end late.</description>
        <name>IsLateEnd</name>
        <label>Is Late End?</label>
        <locationX>380</locationX>
        <locationY>350</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>EndedLate</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>statusCategory</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>InProgress</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>statusCategory</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Completed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
