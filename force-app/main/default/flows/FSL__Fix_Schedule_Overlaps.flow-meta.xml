                <rightValue>
                    <stringValue>CannotComplete</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>IsOverlapLong</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Determines whether the schedule overlap is equal to or more than ten minutes.</description>
        <name>IsOverlapLong</name>
        <label>Is Overlap Long?</label>
        <locationX>182</locationX>
        <locationY>458</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>LongOverlap</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>overlapLengthMinutes</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>10.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>GetSchedulingPolicy</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
